<div class="main-banner">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 align-self-center">
        <div class="header-text">
          <%= form_with model: anime do |form| %>
            <div>
              <h1><%= form.label :title %><br></h1>
              <%= form.text_field :title %>
              <% anime.errors.full_messages_for(:title).each do |message| %>
                <div><%= message %></div>
              <% end %>
            </div>

            <div>
              <h1>Body</h1>
              <%= form.rich_text_area :body %><br>
              <% anime.errors.full_messages_for(:body).each do |message| %>
                <div><%= message %></div>
              <% end %>
            </div>



            <div>
              <h1>Status</h1>

              <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
            </div>

            <div>
              <%= form.submit %>
            </div>
          <% end %>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>



