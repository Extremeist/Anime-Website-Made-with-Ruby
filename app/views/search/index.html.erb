<div class="page-heading normal-space">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h2>Current Submitted List!</h2>
      </div>
    </div>
  </div>
</div>
  <div class="main-banner">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 align-self-center">
          <div class="header-text">
  <h1 class="text-center"><%= pluralize(@animes.count, "Result") %></h1>

  <%= render 'search/form' %>

  <div class ="container">
    <table class="table table-dark table-striped">
      <thread>
        <tr>
          <th><%= sort_link(@query, :title, "Title", default_order: :asc) %></th>
          <th><%= sort_link(@query, :body, "About Anime") %></th>
        </tr>
      </thread>

      <tbody>
      <%@animes.each do|animes| %>
        <tr>
          <td><%= link_to animes.title, animes %></td>
          <td><%= animes.body.to_plain_text.truncate(100).strip.gsub(/(\(|\[).+(\)|\])/, '')%></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>